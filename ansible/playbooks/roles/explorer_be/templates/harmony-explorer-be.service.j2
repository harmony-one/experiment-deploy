[Unit]
Description=harmony explorer backend service
After=network.target

[Service]
Type=simple
Restart=always
RestartSec=1
User={{ USER.user }}
EnvironmentFile={{ USER.home }}/harmony-dashboard-backend/.explorer.env
WorkingDirectory={{ USER.home }}/harmony-dashboard-backend
ExecStart=/bin/bash -l -c 'npm run start'
StandardError=syslog
SyslogIdentifier=harmony-explorer-be
StartLimitInterval=0
LimitNOFILE=65536
LimitNPROC=65536

[Install]
WantedBy=multi-user.target